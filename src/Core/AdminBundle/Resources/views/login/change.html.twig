{% extends 'CoreAdminBundle:login:layout_new.html.twig' %}
{% block content %}

<div id="contentbg" class="inv-box" style="">
<!-- Title -->
        <hr><hr>
        <div id="phone-call"><span class="tblue">
            <center><img src="/web/bundles/login/img/BannerT.jpg"></center>
        </div>
        <hr>
<!-- End Title -->
<!-- Content -->
<!-- Start Form -->
    <div id="cform" class="card move-form" style="">
    <p class="mpf widget-text"><h2>Nueva contraseña:</h2></p>
        {% if msg %}
            <center><p class="mpf widget-text" style="background-color:brown;color:white">{{ msg }}</p></center>
        {% endif %}
        {{ form(form, {'attr': {'id': 'regform'}}) }}
        <p>&nbsp;</p>
        <p class="button-text">Si tienes problemas para recuperar tu contraseña por favor acude al Centro de Cómputo de tu campus.</p>
        <div id="register">
            <button type="button" id="entrar" name="entrar" id="sub-a" class="button blue sub-btn" onclick="window.location.href='{{ path('portal') }}'">Ingreso</button>
        </div>
    </div>
<!-- End Form -->
<!-- Start Right Column -->
    <div id="rightClip" class="mobile-remove">
        <!-- Start Widgets -->
        <div id="widgets" style="left:40px">
            <div class="" style="display: block;">
                <img src="/web/bundles/login/img/general.png" style="">
                <p class="mpf widget-text" style=""><h3>Ingresa la clave que se te envió por e-mail.</h3></p>
            </div>
            <div class="" style="display: block;">
                <img src="/web/bundles/login/img/general.png" style="">
                <p class="mpf widget-text" style=""><h3>Elije una nueva contraseña.</h3></p>
            </div>
            <div class="" style="display: block;">
        		<button type="button" id="entrar" name="entrar" id="sub-a" class="button blue sub-btn" onclick="window.location.href='{{ path('portal') }}'">Ingreso</button>
            </div>
        </div>
<!-- End Widgets -->
    </div>
<!-- End Right Column -->
<!-- End Content -->   
    <div id="footer" class="" style="">
        <hr><hr>
        <div id="phone-call"><span class="tblue">
            <img src="/web/bundles/login/img/BannerT.jpg">
        </div>
        <hr>
{% endblock %}
