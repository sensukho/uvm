{% extends 'CoreAdminBundle:login:layout.html.twig' %}
{% block content %}
        
        <div class="container">
            <table border="0px" width="100%" height="auto" cellspacing="3" cellpading="3">
                <tr cellspan="3"><td>&nbsp;<br />&nbsp;</td></tr>
                <tr>
                    <td width="80%" align="center">
                        <table border="0px" width="80%" height="auto" cellspacing="3" cellpading="3">
                            {% if msg %}
                            <tr><div id="msg">{{ msg }}<div></tr>
                            {% endif %}
                            <tr>&nbsp;</tr>
                            <tr>
                                <td width="80%" align="left">
                                    <div style="margin-left:100px;">{{ form(form) }}</div>
                                </td>
                            </tr>
                            <tr>
                                <tdalign="center">&nbsp;</td>
                            </tr>
                        </table>
                        <!--  IMPRIME LOS BOTONES DE REGISTRO Y RECUPERACION (NO MODIFICAR) -->
                        <table border="0px" width="50%" height="auto" cellspacing="3" cellpading="3">
                        <tr>
                            <td width="50%" align="left"><a href="/web/login{{ params }}"><button type="button">Ingreso</button></a></td>
                            <td align="right"><a href="/web/register{{ params }}"><button type="button">Registro</button></a></td>
                        </tr>
                        </table>
                    </td>
                </tr>
                <tr cellspan="3"><td>&nbsp;<br />&nbsp;</td></tr>
            </table>
        </div>
        
{% endblock %}
